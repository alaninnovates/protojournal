<% if @most_recent_journal.nil? %>
  <p class="italic">No journal entries found. Please create a journal entry to add objectives.</p>
<% else %>
  <%= form_with model: [@project, Objective.new], local: true, class: "mb-6 flex space-x-4" do |f| %>
    <div class="flex-1">
      <%= f.label :description, "Objective Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :description, class: "w-full border border-gray-300 rounded-md p-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>
    <div class="flex items-end">
      <%= render(ButtonComponent.new(
            color: :blue,
            text: "Add Objective",
            type: "submit",
          )) %>
    </div>
  <% end %>

  <% @most_recent_journal.objectives.each do |objective| %>
    <div class="border-b last:border-0 p-4 flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-600 mt-1"><%= objective.description %></p>
      </div>
      <div class="flex items-center space-x-4">
      <span class="font-mono text-sm <%= objective.status ? 'text-emerald-500' : 'text-yellow-500' %>">
        <%= objective.status ? 'Completed' : 'In Progress' %>
      </span>
        <% unless objective.status %>
          <!--        <form action="<%#= complete_project_objective_path(@project, objective) %>" method="post" class="inline">-->
          <%#= csrf_meta_tags %>
          <button type="submit" class="px-3 py-1 bg-emerald-500 text-white rounded-md hover:bg-emerald-600 transition-colors text-sm">
            Mark as Completed
          </button>
          <!--        </form>-->
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>