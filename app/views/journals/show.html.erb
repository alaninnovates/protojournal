<div class="max-w-7xl mx-auto p-8 md:p-4">
  <div class="mb-4 flex items-center text-sm text-gray-600 hover:text-gray-800 gap-2">
    <%= icon "arrow-left", class: "w-4 h-4" %>
    <%= link_to "Back to Journals", project_path(@journal.project) %>
  </div>
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold">Journal</h1>
      <h2 class="text-lg mb-4">Week of <%= @journal.week_start.strftime("%B %d, %Y") %>
        - <%= @journal.week_end.strftime("%B %d, %Y") %></h2>
    </div>
    <div class="flex items-center gap-2 mb-6">
      <%#= render(ButtonComponent.new(
        color: :gray,
        text: "Edit",
        type: "button",
        icon: "pencil",
        data: {
        }
      )) %>
      <%= render(ButtonComponent.new(
        color: :blue,
        text: "Export",
        type: "button",
        icon: "download",
        data: {
        }
      )) %>
    </div>
  </div>
  <turbo-frame id="journal_summary_<%= @journal.id %>">
    <%= render "journals/summary", journal: @journal %>
  </turbo-frame>
  <div data-controller="editable" class="mb-6 p-6 rounded-2xl border">
    <h2 class="font-mono mb-4">Objective Completion</h2>
    <ul class="list-disc list-inside">
      <% @journal.objectives.each do |objective| %>
        <li class="mb-1">
          <span><%= objective.description %></span>
          <span class="font-mono text-sm <%= objective.status === 'pending' ? 'text-yellow-500' : 'text-emerald-500' %>">
            (<%= objective.status.capitalize %>)</span>
        </li>
      <% end %>
    </ul>
  </div>
  <turbo-frame id="journal_reflection_<%= @journal.id %>">
    <%= render "journals/reflection", journal: @journal %>
  </turbo-frame>
</div>