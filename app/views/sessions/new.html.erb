<div class="flex items-center justify-center min-h-screen p-4">
  <div class="w-full max-w-sm bg-card rounded-lg p-10 shadow-xl border border-border">
    <h1 class="text-center text-3xl font-bold mb-8">Sign in</h1>

    <% if flash[:alert] %>
      <div class="bg-red-500 bg-opacity-10 text-red-300 border border-red-500 border-opacity-30 rounded-lg p-4 mb-6 text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="bg-green-500 bg-opacity-10 text-green-300 border border-green-500 border-opacity-30 rounded-lg p-4 mb-6 text-sm">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true, class: "flex flex-col gap-6" do |form| %>
      <div class="flex flex-col gap-2">
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "px-4 py-3 bg-input-background text-foreground border border-border rounded-lg font-mono text-sm focus:outline-none focus:border-primary focus:ring-2 focus:ring-purple-500 focus:ring-opacity-20 transition" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "px-4 py-3 bg-input-background text-foreground border border-border rounded-lg font-mono text-sm focus:outline-none focus:border-primary focus:ring-2 focus:ring-purple-500 focus:ring-opacity-20 transition" %>
      </div>

      <div>
        <%= render(ButtonComponent.new(
          text: "Sign in",
          color: :green,
          variant: :default,
          size: :md,
          type: :submit,
          )) %>
      </div>
    <% end %>

    <div class="text-center mt-8 pt-6 border-t border-border">
      <p class="mb-2">
        <small class="text-muted-foreground">
          <%= link_to "Forgot password?", new_password_path, class: "text-primary hover:underline opacity-90 hover:opacity-100 transition" %>
        </small>
      </p>
      <p>
        <small class="text-muted-foreground">
          Don't have an account? <%= link_to "Sign up", signup_path, class: "text-primary hover:underline opacity-90 hover:opacity-100 transition" %>
        </small>
      </p>
    </div>
  </div>
</div>