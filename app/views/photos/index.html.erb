<div class="max-w-7xl mx-auto p-8 md:p-4">
  <div class="mb-4">
    <h1 class="text-4xl font-bold mb-2">Dump Photos</h1>
  </div>

  <div class="relative bg-white rounded-2xl border border-dashed border-gray-200 p-12 text-center overflow-hidden">
    <div class="relative max-w-sm mx-auto">
      <div class="w-20 h-20 rounded-2xl bg-blue-500 flex items-center justify-center mx-auto mb-6">
        <%= icon "camera", class: "w-10 h-10 text-white" %>
      </div>

      <h3 class="text-zinc-900 mb-2">Add Photos</h3>
      <p class="text-zinc-600 mb-6 text-sm font-mono">
        Upload from your device or capture with your camera
      </p>

      <%= form_with url: photos_path, multipart: true, local: true, html: { class: "flex flex-col sm:flex-row gap-3 justify-center", data: { controller: "photo-dump" } } do |f| %>
        <%= f.file_field :photos, id: "photo_upload_input", name: "photos[]", multiple: true, accept: "image/*", class: "hidden", data: { direct_upload_url: rails_direct_uploads_url, action: "change->photo-dump#filesChanged" } %>
        <label for="photo_upload_input" class="px-6 py-3 bg-blue-500 text-white rounded-xl flex items-center justify-center gap-2 cursor-pointer">
          <%= icon "upload", class: "w-5 h-5" %>
          Upload Photos
        </label>

        <%= f.file_field :photos, id: "photo_camera_input", name: "photos[]", accept: "image/*", capture: "environment", class: "hidden", data: { direct_upload_url: rails_direct_uploads_url, action: "change->photo-dump#filesChanged" } %>
        <label for="photo_camera_input" class="px-6 py-3 bg-white text-zinc-700 border border-gray-200 rounded-xl hover:bg-gray-50 transition-all flex items-center justify-center gap-2 cursor-pointer">
          <%= icon "camera", class: "w-5 h-5" %>
          Take Photo
        </label>
      <% end %>
    </div>
  </div>

  <%= render "photo_list" %>
</div>