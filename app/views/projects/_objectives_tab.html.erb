<% if @most_recent_journal.nil? %>
  <p class="italic">No journal entries found. Please create a journal entry to add objectives.</p>
<% else %>
  <%= form_with model: [@project, Objective.new], local: true, class: "mb-6 flex space-x-4" do |f| %>
    <div class="flex-1">
      <%= f.label :description, "Objective Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :description, class: "w-full border border-gray-300 rounded-md p-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>
    <div class="flex items-end">
      <%= render(ButtonComponent.new(
        color: :blue,
        text: "Add Objective",
        type: "submit",
      )) %>
    </div>
  <% end %>

  <% @most_recent_journal.objectives.each do |objective| %>
    <div class="p-4 flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-600 mt-1"><%= objective.description %></p>
      </div>
      <div class="flex items-center space-x-4">
      <span class="font-mono text-sm <%= objective.status === 'pending' ? 'text-yellow-500' : 'text-emerald-500' %>">
        <%= objective.status.capitalize %>
      </span>
        <% unless objective.status === 'completed' %>
          <%= form_with url: complete_project_objective_path(@project, objective), method: :patch, local: true, class: "inline" do |form| %>
            <%= form.submit "Mark as Completed", class: "px-3 py-1 bg-emerald-500 text-white rounded-md hover:bg-emerald-600 transition-colors text-sm" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="mt-2 border-b last:border-0 pb-4 pl-4 space-x-6 overflow-x-auto overflow-y-visible pt-2">
      <% objective.photos.each do |photo| %>
        <turbo-frame id="photo_<%= photo.id %>">
          <%= render "projects/objective_photo", photo: photo, objective: objective %>
        </turbo-frame>
      <% end %>
    </div>
  <% end %>
<% end %>