<div class="max-w-7xl mx-auto p-8 md:p-4">
  <div class="mb-4">
    <h1 class="text-4xl font-bold mb-2">Your Projects</h1>
    <span class="text-sm font-mono">
      <%= @projects.count { |p| p.status == 'active' } %> active
    </span>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @projects.each do |project| %>
      <a
        href="<%= project_path(project) %>"
        class="group relative backdrop-blur-sm rounded-2xl border border-zinc-700 p-6 hover:border-violet-500/50 hover:shadow-xl hover:shadow-violet-500/10 transition-all cursor-pointer overflow-hidden"
      >
        <div class="absolute inset-0 bg-gradient-to-br from-violet-500/5 to-fuchsia-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative flex items-start justify-between mb-4">
          <div class="flex-1">
            <h3 class="mb-2">
              <%= project.name %>
            </h3>
            <span class="inline-block px-2.5 py-1 rounded-lg text-xs font-mono <%= project.status == 'active' ? 'bg-emerald-500/20 text-emerald-400 border border-emerald-500/30' : 'bg-zinc-800/50 border border-zinc-700' %>">
              <%= project.status.upcase %>
            </span>
          </div>
        </div>

        <div class="relative space-y-3">
          <div class="flex items-center justify-between text-sm">
            <span class="font-mono">Photos</span>
            <span class="font-mono">3</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="font-mono">Last updated</span>
            <span class="font-mono text-xs"><%= project.updated_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="font-mono">Objectives</span>
            <span class="font-mono">
              <%= project.objectives.count { |o| o.completed } %>/<%= project.objectives.size %>
            </span>
          </div>
        </div>
      </a>
    <% end %>
    <button
      type="submit"
      class="relative group bg-white rounded-2xl border-2 border-dashed border-gray-200 p-6 hover:border-indigo-300/80 hover:bg-gray-50 transition-all hover:text-indigo-600 min-h-[240px] flex items-center justify-center overflow-hidden"
      data-controller="modal"
      data-action="modal#show"
      data-modal-dialog-param="create-project-modal"
    >
      <div class="absolute inset-0 bg-primary opacity-0 group-hover:opacity-100 transition-opacity"></div>
      <div class="relative text-center">
        <div class="text-4xl mb-3 font-light text-gray-700">+</div>
        <div class="font-mono text-gray-600">New Project</div>
      </div>
    </button>
  </div>
</div>
<%= render "create_project_modal" %>